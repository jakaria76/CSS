@model CSS.Models.LeadershipMember

@{
    ViewData["Title"] = "Leadership Details";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #e8f0ff, #faffff);
        min-height: 100vh;
    }

    /* Hero Banner */
    .banner {
        background: url('/images/leadership-bg.jpg') center/cover no-repeat;
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-shadow: 0 3px 8px rgba(0,0,0,0.55);
        margin-bottom: -80px;
    }

    .details-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 30px;
        border: 1px solid rgba(255,255,255,0.3);
        box-shadow: 0 12px 38px rgba(0,0,0,0.18);
        max-width: 900px;
        margin: auto;
        animation: fadeIn .45s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(12px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .leader-photo {
        height: 260px;
        width: 100%;
        border-radius: 14px;
        object-fit: cover;
        box-shadow: 0 8px 25px rgba(0,0,0,0.22);
    }

    .leader-name {
        font-size: 32px;
        font-weight: 800;
        color: #003c8f;
    }

    .leader-position {
        font-size: 20px;
        font-weight: 600;
        color: #0d6efd;
    }

    .leader-message {
        font-size: 17px;
        line-height: 1.7;
        text-align: justify;
        color: #444;
        margin-top: 14px;
    }

    @@media(max - width: 576px)

    {
        .leader-photo

    {
        height: 200px;
    }

    .leader-name {
        font-size: 26px;
    }

    .leader-position {
        font-size: 18px;
    }

    }
</style>


<!-- 🔥 HERO BANNER -->
<div class="banner">
    <div class="text-center">
        <h2 class="leader-name">@Model.Name</h2>
        <p class="leader-position">@Model.Position</p>
    </div>
</div>


<!-- 🔥 DETAILS CARD -->
<div class="container py-5">

    <a asp-action="Index" class="btn btn-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Back
    </a>

    <div class="details-card">

        <div class="row g-4 align-items-center">

            <!-- IMAGE -->
            <div class="col-md-4">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                     class="leader-photo" />
            </div>

            <!-- TEXT INFO -->
            <div class="col-md-8">

                <p class="leader-message">
                    @Model.ShortMessage
                </p>

            </div>

        </div>

    </div>

</div>
