@model CSS.Models.LeadershipMember

@{
    ViewData["Title"] = "Edit Leadership Member";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #e6f0ff, #faffff);
        min-height: 100vh;
    }

    .edit-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 30px;
        border: 1px solid rgba(255,255,255,0.35);
        box-shadow: 0 12px 35px rgba(0,0,0,0.18);
        max-width: 850px;
        margin: auto;
        animation: fadeIn .4s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(12px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .page-title {
        font-size: 30px;
        font-weight: 800;
        color: #0d6efd;
        text-align: center;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #003c8f;
    }

    .profile-img {
        height: 140px;
        width: 140px;
        border-radius: 14px;
        object-fit: cover;
        box-shadow: 0 6px 22px rgba(0,0,0,0.25);
        margin-bottom: 8px;
    }

    .btn-primary, .btn-secondary {
        padding: 8px 22px;
        font-size: 16px;
    }

    @@media(max - width: 576px)

    {
        .edit-card

    {
        padding: 20px;
    }

    .page-title {
        font-size: 24px;
    }

    .profile-img {
        height: 120px;
        width: 120px;
    }

    }
</style>


<div class="container py-5">

    <div class="edit-card">

        <h2 class="page-title">
            <i class="bi bi-person-gear"></i> Edit Leadership Member
        </h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter member name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Position -->
            <div class="mb-3">
                <label asp-for="Position" class="form-label"></label>
                <input asp-for="Position" class="form-control" placeholder="Leadership position" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <!-- Short Message -->
            <div class="mb-3">
                <label asp-for="ShortMessage" class="form-label"></label>
                <textarea asp-for="ShortMessage" class="form-control" rows="3"
                          placeholder="Short message / Description"></textarea>
                <span asp-validation-for="ShortMessage" class="text-danger"></span>
            </div>

            <!-- Current Photo -->
            <div class="mb-3">
                <label class="form-label">Current Photo</label><br />

                @if (Model.ImageData != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                         class="profile-img" />
                }
                else
                {
                    <p class="text-muted">No photo uploaded.</p>
                }
            </div>

            <!-- Replace Photo -->
            <div class="mb-3">
                <label class="form-label">Replace Photo (optional)</label>
                <input type="file" name="ImageFile" accept="image/*" class="form-control" />
            </div>

            <!-- Buttons -->
            <div class="text-end mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>

        </form>

    </div>

</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
