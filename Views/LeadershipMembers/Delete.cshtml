@model CSS.Models.LeadershipMember

@{
    ViewData["Title"] = "Delete Leadership Member";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #ffd1d1, #fff2f2);
        min-height: 100vh;
    }

    .delete-card {
        background: rgba(255, 255, 255, 0.30);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 28px;
        border: 1px solid rgba(255,255,255,0.4);
        box-shadow: 0 12px 32px rgba(0,0,0,0.20);
        max-width: 900px;
        margin: auto;
        animation: fadeIn .35s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(12px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .del-title {
        font-size: 28px;
        font-weight: 800;
        color: #d60000;
        text-align: center;
        margin-bottom: 18px;
    }

    .warning-box {
        background: rgba(255, 255, 255, 0.5);
        padding: 14px 16px;
        border-radius: 12px;
        border-left: 5px solid #d60000;
        font-size: 17px;
        font-weight: 600;
        color: #8b0000;
        margin-bottom: 25px;
    }

    .leader-img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 14px;
        box-shadow: 0 6px 22px rgba(0,0,0,0.25);
    }

    .leader-name {
        font-size: 24px;
        font-weight: 700;
        color: #003c8f;
    }

    .leader-position {
        font-size: 16px;
        font-weight: 600;
        color: #0d6efd;
    }

    .leader-message {
        font-size: 15px;
        line-height: 1.7;
        color: #444;
        margin-top: 10px;
    }

    .btn-danger, .btn-secondary {
        padding: 8px 22px;
        font-size: 16px;
    }

    @@media(max - width: 576px)

    {
        .leader-img

    {
        height: 180px;
    }

    .leader-name {
        font-size: 20px;
    }

    }
</style>

<div class="container py-5">

    <div class="delete-card">

        <!-- Title -->
        <h2 class="del-title">
            <i class="bi bi-exclamation-triangle-fill"></i> Delete Leadership Member
        </h2>

        <!-- Warning Message -->
        <div class="warning-box">
            ⚠ This action will permanently delete this leadership member.
            Once deleted, it cannot be undone.
        </div>

        <!-- Profile Display -->
        <div class="row g-4 align-items-center">

            <!-- Photo -->
            <div class="col-md-4">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                     class="leader-img" />
            </div>

            <!-- Info -->
            <div class="col-md-8">
                <div class="leader-name">@Model.Name</div>
                <div class="leader-position">@Model.Position</div>
                <div class="leader-message">@Model.ShortMessage</div>
            </div>
        </div>

        <!-- Delete Form -->
        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />

            <button class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Confirm Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>

    </div>

</div>
