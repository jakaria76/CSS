@model CSS.Models.Event

<form method="post" asp-action="Register" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input type="hidden" name="eventId" value="@Model.Id" />

    <!-- Full Name -->
    <div class="mb-2">
        <input class="form-control" 
               name="FullName" 
               placeholder="Full Name" required />
    </div>

    <!-- Mobile -->
    <div class="mb-2">
        <input class="form-control" 
               name="Mobile" 
               placeholder="Mobile Number" required />
    </div>

    <!-- Email -->
    <div class="mb-2">
        <input class="form-control" 
               name="Email" 
               placeholder="Email (optional)" />
    </div>

    <!-- Gender -->
    <div class="mb-2">
        <select name="Gender" class="form-select">
            <option value="">Select Gender</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
    </div>

    <!-- Institute -->
    <div class="mb-2">
        <input class="form-control" 
               name="InstituteName" 
               placeholder="Institute Name" />
    </div>

    <!-- Class -->
    <div class="mb-2">
        <input class="form-control" 
               name="ClassName" 
               placeholder="Class (e.g., 10, 1st Year, CSE)" />
    </div>

    <!-- Volunteer -->
    <div class="form-check mb-2">
        <input type="checkbox" class="form-check-input" name="WillVolunteer" />
        <label class="form-check-label">I want to volunteer</label>
    </div>

    <!-- Why Join -->
    <div class="mb-2">
        <textarea class="form-control" name="WhyJoin"
                  placeholder="Why do you want to join? (optional)" rows="2"></textarea>
    </div>

    <!-- Payment Method -->
    <div class="mb-2">
        <select name="PaymentMethod" class="form-select">
            <option value="">Payment Method (if paid)</option>
            <option>Bkash</option>
            <option>Nagad</option>
            <option>Rocket</option>
            <option>aamarpay</option>
            <option>Free</option>
        </select>
    </div>

    <!-- Image Upload -->
    <div class="mb-2">
        <label class="form-label">Your Photo</label>
        <input type="file" name="UserImage" class="form-control" />
    </div>

    <button class="btn btn-primary w-100">Register</button>

    @if (TempData["Registered"] != null)
    {
        <div class="alert alert-success mt-2">@TempData["Registered"]</div>
    }
</form>
