@model CSS.Models.Event

<div class="card event-card h-100 shadow-sm border-0 rounded-3">

    @* EVENT IMAGE (Banner or Default) *@
    @{
        string imgSrc = "/images/default-event.jpg";

        if (Model.BannerImage != null)
        {
            imgSrc = $"data:{Model.BannerImageType};base64,{Convert.ToBase64String(Model.BannerImage)}";
        }
    }

    <img src="@imgSrc"
         class="card-img-top rounded-top"
         style="height:180px;object-fit:cover;" />

    <div class="card-body d-flex flex-column">

        @* TITLE *@
        <h5 class="card-title fw-bold">@Model.Title</h5>

        @* VENUE + DATE *@
        <p class="text-muted small mb-2">
            <i class="fa-solid fa-location-dot"></i> @Model.Venue <br />
            <i class="fa-solid fa-calendar-days"></i>
            @(Model.StartDateTime?.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt") ?? "Not set")
        </p>

        @* SHORT DESCRIPTION (Trim 120 chars) *@
        @{
            string desc = Model.ShortDescription ?? "";
            if (desc.Length > 120)
            {
                desc = desc.Substring(0, 120) + "...";
            }
        }

        <p class="text-secondary small flex-grow-1">@desc</p>

        @* FOOTER (Button + Tag Badge) *@
        <div class="mt-2 d-flex justify-content-between align-items-center">

            <a asp-action="Details"
               asp-route-id="@Model.Id"
               class="btn btn-primary btn-sm">
                Details
            </a>

            @if (!string.IsNullOrWhiteSpace(Model.Tag))
            {
                <span class="badge bg-secondary">@Model.Tag</span>
            }
        </div>
    </div>
</div>
