@model CSS.Models.Event

<div class="card event-card h-100 shadow-sm border-0 rounded-3">

    @* -- EVENT IMAGE (DB OR FALLBACK) -- *@
    @{
        string imgSrc;

        if (Model.BannerImage != null && Model.BannerImage.Length > 0)
        {
            string type = string.IsNullOrWhiteSpace(Model.BannerImageType)
            ? "image/jpeg"
            : Model.BannerImageType;

            imgSrc = $"data:{type};base64,{Convert.ToBase64String(Model.BannerImage)}";
        }
        else
        {
            imgSrc = Url.Content("~/images/default-event.jpg");
        }
    }

    <img src="@imgSrc"
         alt="@Model.Title"
         class="card-img-top rounded-top"
         style="height:180px;object-fit:cover;" />

    <div class="card-body d-flex flex-column">

        <h5 class="card-title fw-bold">@Model.Title</h5>

        <p class="text-muted small mb-1">
            <i class="fa-solid fa-location-dot"></i> @Model.Venue <br />
            <i class="fa-solid fa-calendar-days"></i>
            @(Model.StartDateTime?.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt") ?? "Not Set")
        </p>

        <p class="fw-semibold mb-1">
            @if (Model.Price > 0)
            {
                <span class="badge bg-warning text-dark px-3 py-2">৳ @Model.Price</span>
            }
            else
            {
                <span class="badge bg-success px-3 py-2">Free</span>
            }
        </p>

        @{
            string desc = Model.ShortDescription ?? "";
            if (desc.Length > 120)
                desc = desc.Substring(0, 120) + "...";
        }

        <p class="text-secondary small flex-grow-1">@desc</p>

        <div class="mt-2 d-flex justify-content-between align-items-center">
            <a asp-action="Details"
               asp-route-id="@Model.Id"
               class="btn btn-primary btn-sm px-3">
                Details
            </a>

            @if (!string.IsNullOrWhiteSpace(Model.Tag))
            {
                <span class="badge bg-secondary">@Model.Tag</span>
            }
        </div>

    </div>
</div>
