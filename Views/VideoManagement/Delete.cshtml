@model CSS.Models.Video
@{
    ViewData["Title"] = "Delete Video";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .delete-box {
        max-width: 650px;
        margin: 40px auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 14px;
        box-shadow: 0px 6px 20px rgba(0,0,0,0.08);
    }

    .delete-header {
        background: linear-gradient(90deg, #b71c1c, #f44336);
        padding: 15px 20px;
        border-radius: 10px;
        color: white;
        margin-bottom: 25px;
        font-size: 20px;
        font-weight: 700;
    }

    .info-label {
        font-weight: 700;
        margin-bottom: 3px;
    }

    .info-value {
        background: #f8f9ff;
        border: 1px solid #dbe1ff;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .btn-cancel {
        background: #607d8b;
        color: white;
        font-weight: bold;
        border-radius: 6px;
        padding: 8px 20px;
    }

    .btn-delete {
        background: #d32f2f;
        color: white;
        font-weight: bold;
        border-radius: 6px;
        padding: 8px 20px;
    }
</style>

<div class="delete-box">

    <div class="delete-header">
        <i class="bi bi-trash3"></i> Delete Video
    </div>

    <p class="text-danger fw-bold">
        আপনি কি নিশ্চিত এই ভিডিওটি সিস্টেম থেকে স্থায়ীভাবে মুছে ফেলতে চান?
    </p>

    <div>
        <div class="info-label">Title</div>
        <div class="info-value">@Model.Title</div>

        <div class="info-label">YouTube URL</div>
        <div class="info-value">@Model.YouTubeUrl</div>

        <div class="info-label">Sort Order</div>
        <div class="info-value">@Model.SortOrder</div>
    </div>

    <form asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-delete me-2">
            <i class="bi bi-trash"></i> Delete
        </button>

        <a asp-action="Index" class="btn btn-cancel">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>

</div>
