@model CSS.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["FullScreen"] = true;
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="auth-full-bg login-bg">
    <div class="auth-card">

        <h2 class="auth-title">Welcome Back</h2>
        <p class="auth-subtitle">Login to continue</p>

        <form asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control auth-input" placeholder="Enter email" />
            </div>

            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control auth-input" placeholder="Enter password" />
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe">Remember me</label>
            </div>

            <button type="submit" class="btn auth-btn w-100">Login</button>
        </form>

        <!-- Google Login Button -->
        <div class="text-center mt-4">
            <a href="/Account/GoogleLogin" class="google-btn w-100">
                <svg class="google-icon" viewBox="0 0 48 48">
                    <path fill="#EA4335" d="M24 9.5c3.54 0 6.72 1.22 9.21 3.6l6.85-6.85C35.9 2.39 30.47 0 24 0 14.74 0 6.51 5.33 2.56 13.07l7.98 6.19C12.36 13.02 17.74 9.5 24 9.5z" />
                    <path fill="#4285F4" d="M46.5 24.5c0-1.72-.15-3.38-.42-5H24v9.5h12.65c-.55 2.94-2.15 5.43-4.57 7.11l7.02 5.46C43.94 37.38 46.5 31.4 46.5 24.5z" />
                    <path fill="#FBBC05" d="M10.54 28.26c-.5-1.48-.77-3.06-.77-4.76s.27-3.28.77-4.76l-7.98-6.19C.92 16.64 0 20.24 0 24c0 3.76.92 7.36 2.56 10.65l7.98-6.19z" />
                    <path fill="#34A853" d="M24 48c6.48 0 11.94-2.13 15.92-5.79l-7.02-5.46C30.96 38.45 27.7 39.5 24 39.5c-6.26 0-11.64-3.52-14.46-8.76l-7.98 6.19C6.51 42.67 14.74 48 24 48z" />
                </svg>
                <span>Login with Google</span>
            </a>
        </div>

        <!-- Facebook Login Button -->
        <!-- Facebook Login Button -->
        <!-- Facebook Login Button -->
        <div class="text-center mt-3">
            <a href="/Account/FacebookLogin" class="social-btn facebook w-100 d-flex align-items-center justify-content-center gap-2">
                <img src="https://cdn-icons-png.flaticon.com/512/5968/5968764.png" width="22" height="22" alt="Facebook" />
                <span>Login with Facebook</span>
            </a>
        </div>




        <div class="text-center mt-3">
            Don't have an account?
            <a asp-controller="Account" asp-action="Register" class="auth-link">Register</a>
        </div>

    </div>
</div>
