@model CSS.Models.Advisor

@{
    ViewData["Title"] = "Edit Advisor";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #e8f0ff, #faffff);
        min-height: 100vh;
    }

    .edit-card {
        background: rgba(255, 255, 255, 0.22);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 30px;
        border: 1px solid rgba(255,255,255,0.3);
        box-shadow: 0 12px 32px rgba(0,0,0,0.12);
        max-width: 800px;
        margin: auto;
        animation: fadeIn .4s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(12px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .page-title {
        font-size: 30px;
        font-weight: 800;
        color: #0d6efd;
        text-align: center;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #003c8f;
    }

    .current-img {
        height: 130px;
        width: 130px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.25);
        margin-bottom: 10px;
    }

    .preview-img {
        height: 130px;
        width: 130px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid #ccc;
        display: none;
    }

    .btn-primary, .btn-secondary {
        padding: 8px 22px;
    }

    @@media(max - width: 576px)

    {
        .edit-card

    {
        padding: 20px;
    }

    .page-title {
        font-size: 24px;
    }

    .current-img, .preview-img {
        height: 110px;
        width: 110px;
    }

    }
</style>


<div class="container py-5">

    <div class="edit-card">

        <h2 class="page-title">
            <i class="bi bi-pencil-square"></i> Edit Advisor
        </h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Advisor name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Role -->
            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <input asp-for="Role" class="form-control" placeholder="Advisor role" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <!-- Bio -->
            <div class="mb-3">
                <label asp-for="Bio" class="form-label"></label>
                <textarea asp-for="Bio" class="form-control" rows="4"
                          placeholder="Short bio"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <!-- Current Photo -->
            <div class="mb-3">
                <label class="form-label">Current Photo</label><br />

                @if (Model.ImageData != null && Model.ImageData.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                         class="current-img" />
                }
                else
                {
                    <p class="text-muted">No photo uploaded.</p>
                }
            </div>

            <!-- Replace Photo -->
            <div class="mb-3">
                <label class="form-label">Replace Photo (Optional)</label>
                <input type="file" name="ImageFile" accept="image/*" class="form-control" id="imageInput" />
                <img id="previewImage" class="preview-img mt-3" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="text-end mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>

    </div>

</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Live Preview of New Image
        const input = document.getElementById("imageInput");
        const preview = document.getElementById("previewImage");

        input.addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = "block";
            }
        });
    </script>
}
