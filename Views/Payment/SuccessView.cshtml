@model CSS.Models.PaymentTransaction
@{
    ViewData["Title"] = "Payment Successful";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<div class="container mt-4">

    <div class="alert alert-success text-center p-4 rounded-4 shadow">
        <h2 class="fw-bold">
            <i class="fa-solid fa-circle-check"></i> Payment Successful!
        </h2>

        <p class="mt-2">Your payment has been received successfully.</p>
    </div>

    <div class="card shadow p-4 rounded-4">
        <h5 class="fw-bold text-success mb-3">Transaction Info</h5>

        <p><strong>Transaction ID:</strong> @Model.TranId</p>
        <p><strong>Amount:</strong> ৳ @Model.Amount @Model.Currency</p>
        <p><strong>Status:</strong> <span class="text-success fw-bold">@Model.Status</span></p>

        <hr />

        <h5 class="fw-bold text-primary">Registration Info</h5>

        <p><strong>Name:</strong> @Model.Registration?.FullName</p>
        <p><strong>Mobile:</strong> @Model.Registration?.Mobile</p>
        <p><strong>Email:</strong> @Model.Registration?.Email</p>
        <p><strong>Event Registration ID:</strong> @Model.RegistrationId</p>

    </div>

    <a href="/" class="btn btn-primary w-100 mt-3 fw-bold">Return Home</a>
</div>
