@model CSS.Models.PaymentTransaction
@{
    ViewData["Title"] = "Payment Failed";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<div class="container mt-4">

    <div class="alert alert-danger text-center p-4 rounded-4 shadow">
        <h2 class="fw-bold">
            <i class="fa-solid fa-circle-xmark"></i> Payment Failed!
        </h2>

        <p class="mt-2">Your payment could not be completed.</p>
    </div>

    <div class="card shadow p-4 rounded-4">
        <h5 class="fw-bold text-danger mb-3">Transaction Info</h5>

        <p><strong>Transaction ID:</strong> @Model.TranId</p>
        <p><strong>Amount:</strong> ৳ @Model.Amount @Model.Currency</p>
        <p><strong>Status:</strong> <span class="text-danger fw-bold">@Model.Status</span></p>

        <hr />

        <h5 class="fw-bold text-secondary">User Info</h5>
        <p><strong>Name:</strong> @Model.Registration?.FullName</p>
        <p><strong>Mobile:</strong> @Model.Registration?.Mobile</p>

    </div>

    <a href="/" class="btn btn-danger w-100 mt-3 fw-bold">Return Home</a>
</div>
