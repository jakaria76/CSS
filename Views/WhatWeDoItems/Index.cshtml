@model IEnumerable<CSS.Models.WhatWeDoItem>
@{
    ViewData["Title"] = "Manage - What We Do";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background: linear-gradient(135deg, #e7f1ff, #f7fbff);
    }

    .wd-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 20px;
        border: 1px solid rgba(255,255,255,0.3);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        transition: all .3s ease;
        min-height: 320px;
    }

        .wd-card:hover {
            transform: translateY(-6px);
            background: rgba(255, 255, 255, 0.35);
            box-shadow: 0 14px 30px rgba(0,0,0,0.15);
        }

    .wd-img {
        width: 100%;
        height: 160px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 15px;
    }

    .wd-title {
        font-size: 20px;
        font-weight: 700;
        color: #003c8f;
        margin-bottom: 6px;
    }

    .wd-icon {
        font-size: 18px;
        font-weight: 600;
        color: #555;
        margin-bottom: 14px;
    }

    .btn-sm {
        padding: 4px 10px;
    }
</style>

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">What We Do</h2>

        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Activity
            </a>

            <a asp-controller="About" asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-eye"></i> View Public Page
            </a>
        </div>
    </div>

    <div class="row g-4">

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3 col-sm-6">

                <div class="wd-card">

                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ImageData)"
                         class="wd-img" />

                    <div class="wd-title">@item.Title</div>
                    <div class="wd-icon">
                        <i class="@item.IconClass"></i> @item.IconClass
                    </div>

                    <div class="mt-auto">

                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-info btn-sm">
                            <i class="bi bi-card-text"></i> Details
                        </a>

                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-primary btn-sm ms-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm ms-1">
                            <i class="bi bi-trash"></i> Delete
                        </a>

                    </div>

                </div>

            </div>
        }

    </div>

</div>
