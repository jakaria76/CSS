@model CSS.Models.WhatWeDoItem

@{
    ViewData["Title"] = "Edit Activity";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .edit-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        padding: 30px;
        border: 1px solid rgba(255,255,255,0.3);
        box-shadow: 0 10px 28px rgba(0,0,0,0.12);
        max-width: 750px;
        margin: auto;
        animation: fadeIn 0.4s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    body {
        background: linear-gradient(135deg, #e7f0ff, #f6fbff);
        min-height: 100vh;
    }

    .page-title {
        font-size: 28px;
        font-weight: 700;
        color: #0d6efd;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-label {
        font-weight: 600;
        color: #003c8f;
    }

    .current-img {
        height: 140px;
        width: 140px;
        border-radius: 10px;
        object-fit: cover;
        box-shadow: 0 4px 15px rgba(0,0,0,0.20);
    }

    .btn-primary, .btn-secondary {
        padding: 8px 20px;
    }

    /* Mobile View Optimized */
    @@media(max - width: 576px)

    {
        .edit-card

    {
        padding: 20px;
    }

    .page-title {
        font-size: 24px;
    }

    .current-img {
        height: 120px;
        width: 120px;
    }

    }
</style>

<div class="container py-5">

    <div class="edit-card">

        <h2 class="page-title">
            <i class="bi bi-pencil-square"></i> Edit Activity
        </h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />

            <!-- TITLE -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter activity title" />
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"
                          placeholder="Short description"></textarea>
            </div>

            <!-- ICON CLASS -->
            <div class="mb-3">
                <label asp-for="IconClass" class="form-label"></label>
                <input asp-for="IconClass" class="form-control"
                       placeholder="Example: bi bi-house-heart" />
            </div>

            <!-- CURRENT IMAGE -->
            <div class="mb-3">
                <label class="form-label">Current Image</label><br />
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                     class="current-img" />
            </div>

            <!-- NEW IMAGE -->
            <div class="mb-3">
                <label class="form-label">Replace Image</label>
                <input type="file" name="ImageFile" accept="image/*" class="form-control" />
            </div>

            <div class="text-end mt-4">
                <button class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
