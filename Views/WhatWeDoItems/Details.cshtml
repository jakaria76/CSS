@model CSS.Models.WhatWeDoItem

@{
    ViewData["Title"] = "Activity Details";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #e7f0ff, #f7fbff);
    }

    .details-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 0;
        overflow: hidden;
        box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        animation: fadeIn 0.4s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .activity-image {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .activity-title {
        font-size: 32px;
        font-weight: 800;
        color: #003c8f;
    }

    .activity-description {
        font-size: 17px;
        line-height: 1.7;
        color: #444;
    }

    .activity-icon {
        font-size: 42px;
        margin-top: 15px;
        color: #0d6efd;
    }

    /* Mobile view adjustments */
    @@media(max - width: 768px)

    {
        .activity-title

    {
        font-size: 26px;
    }

    .activity-description {
        font-size: 15px;
    }

    .activity-icon {
        font-size: 36px;
    }

    }
</style>


<div class="container py-5">

    <a asp-action="Index" class="btn btn-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Back
    </a>

    <div class="details-card">

        <div class="row g-0">

            <!-- LEFT IMAGE -->
            <div class="col-md-5">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                     class="activity-image" />
            </div>

            <!-- RIGHT CONTENT -->
            <div class="col-md-7">
                <div class="p-4">

                    <h2 class="activity-title">@Model.Title</h2>

                    <p class="activity-description mt-3">@Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.IconClass))
                    {
                        <i class="@Model.IconClass activity-icon"></i>
                    }

                </div>
            </div>

        </div>

    </div>

</div>
