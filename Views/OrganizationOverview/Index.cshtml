@model CSS.Models.OrganizationOverview

@{
    ViewData["Title"] = "Organization Overview – Admin";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .overview-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 25px;
        border: 1px solid rgba(255,255,255,0.2);
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .overview-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.25);
            box-shadow: 0 12px 26px rgba(0, 0, 0, 0.15);
        }

    .section-title {
        font-size: 26px;
        font-weight: 700;
        margin-bottom: 18px;
        color: #0d6efd;
    }

    .info-label {
        font-size: 18px;
        font-weight: 600;
        margin-top: 15px;
        color: #333;
    }

    .info-text {
        font-size: 16px;
        color: #444;
    }

    body {
        background: linear-gradient(135deg, #e3eeff, #f8fbff);
    }

    @@media(max - width: 576px)

    {
        .overview-card

    {
        padding: 18px;
    }

    .section-title {
        font-size: 22px;
    }

    .info-label {
        font-size: 16px;
    }

    .info-text {
        font-size: 14px;
    }

    }
</style>

<div class="container py-5">

    <h2 class="text-center mb-4 fw-bold text-primary">
        Organization Overview (Admin Panel)
    </h2>

    @if (Model == null)
    {
        <div class="alert alert-info text-center fs-5 py-3">
            No overview found. Please create one.
        </div>

        <div class="text-center">
            <a asp-action="Create" class="btn btn-success btn-lg px-4">
                <i class="bi bi-plus-lg"></i> Create Overview
            </a>
        </div>
    }
    else
    {
        <div class="overview-card">

            <div class="section-title">
                <i class="bi bi-building"></i> Overview Details
            </div>

            <div>
                <div class="info-label"><i class="bi bi-card-text"></i> Description</div>
                <p class="info-text">@Model.Description</p>
            </div>

            <div>
                <div class="info-label"><i class="bi bi-calendar"></i> Founded Year</div>
                <p class="info-text">@Model.FoundedYear</p>
            </div>

            <div>
                <div class="info-label"><i class="bi bi-bullseye"></i> Purpose</div>
                <p class="info-text">@Model.Purpose</p>
            </div>

            <div class="mt-4 text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-primary px-4">
                    <i class="bi bi-pencil-square"></i> Edit Overview
                </a>
            </div>

        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="About" asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-eye"></i> View Public About Page
        </a>
    </div>

</div>
