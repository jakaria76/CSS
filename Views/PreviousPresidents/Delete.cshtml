@model CSS.Models.PreviousPresident

@{
    ViewData["Title"] = "Delete Previous President";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #ffe0e0, #fff6f6);
        min-height: 100vh;
    }

    .delete-card {
        background: rgba(255, 255, 255, 0.30);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 28px;
        border: 1px solid rgba(255,255,255,0.4);
        box-shadow: 0 12px 35px rgba(0,0,0,0.18);
        max-width: 900px;
        margin: auto;
        animation: fadeIn .4s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(12px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .del-title {
        font-size: 30px;
        font-weight: 800;
        color: #d60000;
        text-align: center;
        margin-bottom: 18px;
    }

    .warning-msg {
        background: rgba(255, 255, 255, 0.5);
        padding: 12px 18px;
        border-radius: 12px;
        margin-bottom: 25px;
        border-left: 5px solid #d60000;
        font-size: 17px;
        font-weight: 500;
        color: #a30000;
    }

    .pp-photo {
        width: 100%;
        height: 220px;
        border-radius: 12px;
        object-fit: cover;
        box-shadow: 0 6px 22px rgba(0,0,0,0.25);
    }

    .pp-name {
        font-size: 24px;
        font-weight: 800;
        color: #003c8f;
    }

    .pp-tenure {
        font-size: 16px;
        color: #0d6efd;
        font-weight: 600;
    }

    .pp-legacy {
        margin-top: 10px;
        font-size: 15px;
        line-height: 1.7;
        color: #444;
    }

    .btn-danger, .btn-secondary {
        padding: 8px 22px;
        font-size: 16px;
    }

    @@media(max - width:576px) {
        .pp-photo

    {
        height: 180px;
    }

    .pp-name {
        font-size: 22px;
    }

    }
</style>


<div class="container py-5">

    <div class="delete-card">

        <h2 class="del-title">
            <i class="bi bi-exclamation-octagon-fill"></i> Delete Previous President
        </h2>

        <div class="warning-msg">
            ⚠️ This action will permanently delete this previous president.
            You cannot undo this action once confirmed.
        </div>

        <div class="row g-4 align-items-center">

            <div class="col-md-4">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                     class="pp-photo" />
            </div>

            <div class="col-md-8">
                <div class="pp-name">@Model.Name</div>

                <div class="pp-tenure">
                    <i class="bi bi-calendar"></i>
                    @Model.TenureStart.ToString("yyyy") - @Model.TenureEnd.ToString("yyyy")
                </div>

                <div class="pp-legacy">
                    @Model.LegacyNote
                </div>
            </div>

        </div>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />

            <button class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Confirm Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>

    </div>

</div>
