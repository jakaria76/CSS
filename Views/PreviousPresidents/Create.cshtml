@model CSS.Models.PreviousPresident

@{
    ViewData["Title"] = "Add Previous President";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #e8f0ff, #faffff);
        min-height: 100vh;
    }

    .create-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 30px;
        border: 1px solid rgba(255,255,255,0.35);
        box-shadow: 0 12px 35px rgba(0,0,0,0.18);
        max-width: 850px;
        margin: auto;
        animation: fadeIn .4s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(12px);
    }

    to {
        opacity, 1;
        transform: translateY(0);
    }

    }

    .page-title {
        font-size: 30px;
        font-weight: 800;
        color: #0d6efd;
        text-align: center;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #003c8f;
    }

    .btn-success, .btn-secondary {
        padding: 8px 22px;
        font-size: 16px;
    }

    @@media(max - width: 576px)

    {
        .create-card

    {
        padding: 20px;
    }

    .page-title {
        font-size: 24px;
    }

    }
</style>


<div class="container py-5">

    <div class="create-card">

        <h2 class="page-title">
            <i class="bi bi-person-plus-fill"></i> Add Previous President
        </h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Tenure -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TenureStart" class="form-label"></label>
                    <input asp-for="TenureStart" type="date" class="form-control" />
                    <span asp-validation-for="TenureStart" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="TenureEnd" class="form-label"></label>
                    <input asp-for="TenureEnd" type="date" class="form-control" />
                    <span asp-validation-for="TenureEnd" class="text-danger"></span>
                </div>
            </div>

            <!-- Legacy Note -->
            <div class="mb-3">
                <label asp-for="LegacyNote" class="form-label"></label>
                <textarea asp-for="LegacyNote" class="form-control" rows="4"
                          placeholder="Legacy note / Achievements"></textarea>
            </div>

            <!-- Photo -->
            <div class="mb-3">
                <label class="form-label">Photo</label>
                <input type="file" name="ImageFile" accept="image/*" class="form-control" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="text-end mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Save
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>

        </form>

    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
