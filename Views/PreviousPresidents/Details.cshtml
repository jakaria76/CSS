@model CSS.Models.PreviousPresident
@{
    ViewData["Title"] = "Previous President Details";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #e8f0ff, #faffff);
        min-height: 100vh;
    }

    /* Top Banner */
    .banner {
        background: url('/images/president-bg.jpg') center/cover no-repeat;
        height: 260px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-shadow: 0 2px 6px rgba(0,0,0,0.5);
        margin-bottom: -80px;
    }

    .details-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 30px;
        border: 1px solid rgba(255,255,255,0.35);
        box-shadow: 0 12px 35px rgba(0,0,0,0.18);
        max-width: 900px;
        margin: auto;
        animation: fadeIn .4s ease-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(12px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .president-photo {
        height: 260px;
        width: 100%;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 6px 22px rgba(0,0,0,0.20);
    }

    .president-name {
        font-size: 32px;
        font-weight: 800;
        color: #003c8f;
    }

    .president-tenure {
        font-size: 20px;
        font-weight: 500;
        color: #0d6efd;
    }

    .president-legacy {
        font-size: 17px;
        line-height: 1.7;
        color: #333;
        margin-top: 12px;
        text-align: justify;
    }

    @@media(max - width: 576px)

    {
        .president-name

    {
        font-size: 26px;
    }

    .president-tenure {
        font-size: 18px;
    }

    .president-photo {
        height: 200px;
    }

    }
</style>


<!-- 🔥 TOP BANNER -->
<div class="banner">
    <div class="text-center">
        <h2 class="president-name">@Model.Name</h2>
        <p class="president-tenure">@Model.TenureStart.ToString("yyyy") - @Model.TenureEnd.ToString("yyyy")</p>
    </div>
</div>


<!-- 🔥 DETAILS CARD -->
<div class="container py-5">

    <a asp-action="Index" class="btn btn-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Back
    </a>

    <div class="details-card">

        <div class="row g-4 align-items-center">

            <!-- IMAGE -->
            <div class="col-md-5">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)"
                     class="president-photo" />
            </div>

            <!-- TEXT INFO -->
            <div class="col-md-7">

                <p class="president-legacy">@Model.LegacyNote</p>

            </div>

        </div>

    </div>

</div>
