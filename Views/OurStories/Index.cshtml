@model IEnumerable<CSS.Models.OurStory>

@{
    ViewData["Title"] = "Manage Timeline (Our Story)";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #eef4ff, #f9fcff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    /* CARD WITH FIXED HEIGHT */
    .story-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 20px;
        border: 1px solid rgba(255,255,255,0.3);
        box-shadow: 0 10px 28px rgba(0,0,0,0.12);
        transition: all .25s ease;
        height: 380px;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
    }

        .story-card:hover {
            transform: translateY(-6px);
            background: rgba(255, 255, 255, 0.35);
            box-shadow: 0 14px 36px rgba(0,0,0,0.18);
        }

    .year-badge {
        background: #0d6efd;
        color: white;
        font-size: 18px;
        font-weight: 700;
        padding: 6px 16px;
        border-radius: 30px;
        display: inline-block;
        margin-bottom: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        flex-shrink: 0;
    }

    /* Scrollable Description */
    .story-text {
        font-size: 16px;
        color: #444;
        line-height: 1.7;
        overflow-y: auto;
        padding-right: 6px;
        flex-grow: 1;
    }

        .story-text::-webkit-scrollbar {
            width: 6px;
        }

        .story-text::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.05);
            border-radius: 10px;
        }

        .story-text::-webkit-scrollbar-thumb {
            background: #0d6efd;
            border-radius: 10px;
        }

    .story-actions {
        margin-top: 10px;
        flex-shrink: 0;
    }

    .btn-sm {
        padding: 5px 12px;
    }

    @@media(max-width:576px) {
        .story-card {
            height: 340px;
        }

        .year-badge {
            font-size: 16px;
            padding: 5px 12px;
        }

        .story-text {
            font-size: 15px;
        }
    }

</style>


<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Our Story Timeline</h2>

        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Story Event
            </a>

            <a asp-controller="About" asp-action="Index"
               class="btn btn-secondary ms-2">
                <i class="bi bi-eye"></i> View About Page
            </a>
        </div>
    </div>

    <div class="row g-4">

        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">

                <div class="story-card">

                    <!-- YEAR FROM EventDate -->
                    <span class="year-badge">
                        <i class="bi bi-calendar2-week-fill"></i> @item.EventDate.ToString("yyyy")
                    </span>

                    <!-- DESCRIPTION -->
                    <p class="story-text">@item.Description</p>

                    <!-- ACTION BUTTONS -->
                    <div class="story-actions">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm ms-1">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>

                </div>

            </div>
        }

    </div>

</div>
