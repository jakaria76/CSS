@model CSS.Models.OurStory

@{
    ViewData["Title"] = "Delete Timeline Event";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>

    body {
        background: linear-gradient(135deg, #ffe0e0, #fff5f5);
        min-height: 100vh;
    }

    .delete-card {
        background: rgba(255, 255, 255, 0.28);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 28px;
        border: 1px solid rgba(255,255,255,0.35);
        box-shadow: 0 12px 32px rgba(0,0,0,0.20);
        max-width: 700px;
        margin: auto;
        animation: fadeIn .35s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(12px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .del-title {
        font-size: 26px;
        font-weight: 800;
        color: #d60000;
        text-align: center;
        margin-bottom: 15px;
    }

    .warning-msg {
        background: rgba(255, 255, 255, 0.6);
        padding: 12px 18px;
        border-radius: 12px;
        border-left: 5px solid #d60000;
        font-weight: 600;
        color: #9c0000;
        margin-bottom: 22px;
    }

    .year-badge {
        background: #0d6efd;
        color: white;
        font-size: 18px;
        font-weight: 700;
        padding: 6px 18px;
        border-radius: 30px;
        display: inline-block;
        margin-bottom: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.15);
    }

    .story-text {
        font-size: 16px;
        color: #444;
        line-height: 1.7;
        margin-bottom: 10px;
    }

    .btn-danger, .btn-secondary {
        padding: 8px 22px;
        font-size: 16px;
    }

    @@media(max-width:576px) {
        .del-title {
            font-size: 22px;
        }

        .year-badge {
            font-size: 16px;
            padding: 5px 14px;
        }
    }

</style>


<div class="container py-5">

    <div class="delete-card">

        <h2 class="del-title">
            <i class="bi bi-exclamation-triangle-fill"></i> Delete Timeline Event
        </h2>

        <div class="warning-msg">
            ⚠ This action will permanently delete this story event.
            You cannot undo this action.
        </div>

        <!-- Event Year from EventDate -->
        <span class="year-badge">
            <i class="bi bi-calendar2-week-fill"></i> @Model.EventDate.ToString("yyyy")
        </span>

        <!-- Description -->
        <div class="story-text">@Model.Description</div>

        <!-- Buttons -->
        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />

            <button class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Confirm Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>

    </div>

</div>
