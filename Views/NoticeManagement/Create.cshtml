@model CSS.Models.Notice

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold page-title">
            <i class="bi bi-plus-circle-dotted"></i> Add New Notice
        </h3>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Back</a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 p-4 create-card">

        <form asp-action="Create" enctype="multipart/form-data" method="post">

            <!-- Title -->
            <div class="mb-3">
                <label class="form-label fw-bold">Title</label>
                <input asp-for="Title" class="form-control form-input" placeholder="Enter notice title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Publish Date -->
            <div class="mb-3">
                <label class="form-label fw-bold">Publish Date</label>
                <input asp-for="PublishDate" type="date" class="form-control form-input" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>

            <!-- Upload PDF -->
            <div class="mb-3">
                <label class="form-label fw-bold">Upload PDF</label>
                <input type="file" name="file" accept="application/pdf" class="form-control form-input" />
            </div>

            <!-- Save Button -->
            <button class="btn btn-primary rounded-pill px-4 fw-bold mt-2">
                Save Notice
            </button>

        </form>

    </div>

</div>


<!-- ============ CUSTOM CSS ============ -->
<style>
    .page-title {
        color: #1b2b6b;
        font-size: 26px;
    }

    .create-card {
        background: #ffffff;
        border-radius: 18px;
    }

    .form-input {
        height: 46px;
        border-radius: 10px;
        border: 1px solid #c8d2f2;
    }

        .form-input:focus {
            border-color: #4154f1;
            box-shadow: 0 0 4px rgba(65, 84, 241, 0.3);
        }
</style>
