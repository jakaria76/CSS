@model CSS.Models.Notice

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold page-title">
            <i class="bi bi-pencil-square"></i> Edit Notice
        </h3>
        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Back</a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 p-4 edit-card">

        <form asp-action="Edit" enctype="multipart/form-data" method="post">

            <input type="hidden" asp-for="Id" />

            <!-- Title -->
            <div class="mb-3">
                <label class="form-label fw-bold">Title</label>
                <input asp-for="Title" class="form-control form-input" placeholder="Enter notice title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Publish Date -->
            <div class="mb-3">
                <label class="form-label fw-bold">Publish Date</label>
                <input asp-for="PublishDate" type="date" class="form-control form-input" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>

            <!-- Replace PDF -->
            <div class="mb-3">
                <label class="form-label fw-bold">Replace PDF (optional)</label>
                <input type="file" name="file" accept="application/pdf" class="form-control form-input" />
            </div>

            <!-- Current PDF Info -->
            <div class="mb-3">
                <label class="form-label fw-bold">Current File</label>
                <div class="d-flex align-items-center bg-light p-3 rounded-3">
                    <i class="bi bi-filetype-pdf text-danger fs-4 me-2"></i>
                    <span class="text-muted">@Model.FileName</span>
                </div>
            </div>

            <!-- Submit Button -->
            <button class="btn btn-primary rounded-pill px-4 fw-bold mt-2">
                Update Notice
            </button>

        </form>

    </div>

</div>


<!-- ================= CUSTOM CSS ================= -->
<style>
    .page-title {
        color: #1b2b6b;
        font-size: 26px;
    }

    .edit-card {
        background: #ffffff;
        border-radius: 18px;
    }

    .form-input {
        height: 46px;
        border-radius: 10px;
        border: 1px solid #c8d2f2;
    }

        .form-input:focus {
            border-color: #4154f1;
            box-shadow: 0 0 4px rgba(65, 84, 241, 0.3);
        }
</style>
